# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.css,*.scss}]
indent_size = 2

[{*.yml,*.json}]
indent_size = 2

[{composer.json,auth.json}]
indent_size = 2

[*.md]
indent_size = 2
